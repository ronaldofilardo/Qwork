{
  "name": "qwork2026",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:prod": "next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint \"app/**/*.{ts,tsx,js,jsx}\" \"lib/**/*.{ts,tsx,js,jsx}\" \"components/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"app/**/*.{ts,tsx,js,jsx}\" \"lib/**/*.{ts,tsx,js,jsx}\" \"components/**/*.{ts,tsx,js,jsx}\" --fix",
    "lint:staged:chunked": "node scripts/lint-staged-chunked.mjs eslint --cache --fix",
    "lint:staged:daemon": "eslint_d restart || true && node scripts/lint-staged-chunked.mjs eslint_d --fix",
    "eslint:d:restart": "eslint_d restart || true",
    "lint:full": "node --max-old-space-size=8192 ./node_modules/next/dist/bin/next lint",
    "lint:ci": "node --max-old-space-size=8192 ./node_modules/next/dist/bin/next lint --max-warnings 2000",
    "lint:deploy-check": "pnpm exec eslint \"app/**/*.{ts,tsx,js,jsx}\" \"lib/**/*.{ts,tsx,js,jsx}\" \"components/**/*.{ts,tsx,js,jsx}\" --max-warnings 2000",
    "quality:check": "pnpm type-check && pnpm lint",
    "quality:fix": "pnpm lint:fix && pnpm type-check",
    "quality:report": "node scripts/quality-baseline-report.cjs",
    "quality:tests": "pwsh -File scripts/ci/check-forbidden-patterns.ps1",
    "quality:tests:bash": "bash scripts/ci/check-forbidden-patterns.sh",
    "validate:mocks": "node scripts/validate-mock-policy.cjs",
    "validate:mocks:file": "node scripts/validate-mock-policy.cjs",
    "pretest": "dotenv -e .env.test --override -- node scripts/checks/validate-test-isolation.js && dotenv -e .env.test --override -- node scripts/checks/ensure-test-env.js && dotenv -e .env.test --override -- node scripts/checks/no-dev-db-in-tests.cjs && dotenv -e .env.test --override -- node scripts/checks/fix-duplicated-fk.cjs && dotenv -e .env.test --override -- node scripts/checks/fix-detectar-anomalias.cjs",
    "validate:ci-envs": "node scripts/checks/validate-ci-envs.cjs",
    "test": "dotenv -e .env.test --override -- jest",
    "test:unit": "cross-env SKIP_GLOBAL_JEST_SETUP=1 dotenv -e .env.test --override -- jest __tests__/lib --runInBand",
    "test:local": "dotenv -e .env.local -- pnpm test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "check:insert-placeholders": "node scripts/checks/validate-insert-placeholders.cjs",
    "cypress": "cypress open",
    "cypress:headless": "cypress run",
    "test:e2e": "npx tsx scripts/insert-login-test-data.ts && start-server-and-test 'pnpm dev:test' http://localhost:3000 cypress:headless",
    "cypress:regressao:headless": "cypress run --spec \"cypress/e2e/regressao/fluxo-cadastro-regressao.cy.ts\"",
    "test:e2e:regressao": "npx tsx scripts/insert-login-test-data.ts && start-server-and-test 'pnpm dev:test' http://localhost:3000 cypress:regressao:headless",
    "dev:test": "node scripts/dev-test-cross-platform.js",
    "test:all": "pnpm test && pnpm test:e2e",
    "reconciliar:contratos": "node scripts/checks/reconciliacao-contratos.mjs",
    "migrate:ativacao": "psql -U postgres -h localhost -p 5432 -d nr-bps_db -f database/migrations/migration-004-constraints-ativacao.sql",
    "migrate:tokens": "psql -U postgres -h localhost -p 5432 -d nr-bps_db -f database/migrations/migration-005-tokens-retomada.sql",
    "migrate:apply": "psql -U postgres -h localhost -p 5432 -d nr-bps_db -f database/migrations/117_add_missing_relatorio_columns.sql",
    "migrate:all": "pnpm migrate:ativacao && pnpm migrate:tokens",
    "lgpd:auditar": "tsx scripts/auditar-cpfs.ts",
    "lgpd:migrar": "psql -U postgres -h localhost -p 5432 -d nr-bps_db -f database/lgpd-compliance-migration.sql",
    "db:seed": "psql -U postgres -h localhost -p 5432 -d nr-bps_db -f database/seeds/seed_admin.sql",
    "db:seed:test": "psql -U postgres -h localhost -p 5432 -d nr-bps_db_test -f database/seeds/seed_admin.sql",
    "db:seed:clinic": "psql -U postgres -h localhost -p 5432 -d nr-bps_db -f database/seeds/seed_clinica_gestor.sql",
    "db:check:orphaned-clinicas": "psql -U postgres -h localhost -p 5432 -d nr-bps_db -f database/fixes/fix_orphaned_clinica_ids.sql",
    "db:seed:all": "node scripts/db-seed-all.js",
    "prepare": "husky",
    "clean:root": "powershell -ExecutionPolicy Bypass -File scripts/cleanup-root.ps1",
    "check-backblaze": "tsx scripts/check-backblaze.mts"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "node scripts/lint-staged-chunked.mjs eslint_d --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write --ignore-path .gitignore"
    ],
    "__tests__/**/*.{ts,tsx}": [
      "bash -c 'grep -l \"@ts-nocheck\" \"$@\" | while read file; do echo \"⚠️  QUALITY POLICY: Revisar @ts-nocheck em $file (docs/testing/QUALITY-POLICY.md)\"; done' --"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/s3-request-presigner": "^3.975.0",
    "@neondatabase/serverless": "^0.9.5",
    "@sparticuz/chromium": "^143.0.4",
    "@tanstack/react-query": "^5.90.16",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.5.1",
    "dotenv": "^17.2.3",
    "html2canvas": "^1.4.1",
    "iconv-lite": "^0.7.1",
    "idb": "^8.0.3",
    "jschardet": "^3.1.4",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.554.0",
    "next": "^14.2.33",
    "next-auth": "^4.24.13",
    "pg": "^8.16.3",
    "pg-connection-string": "^2.10.1",
    "puppeteer": "^24.31.0",
    "puppeteer-core": "^24.36.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cypress": "^1.1.6",
    "@types/jest": "^30.0.0",
    "@types/jspdf": "^2.0.0",
    "@types/node": "^20.19.25",
    "@types/pg": "^8.15.6",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "autoprefixer": "^10.4.22",
    "baseline-browser-mapping": "^2.9.16",
    "cross-env": "^10.1.0",
    "cypress": "^15.7.0",
    "cypress-file-upload": "^5.0.8",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.33",
    "eslint-config-prettier": "^10.1.8",
    "eslint_d": "^14.3.0",
    "form-data": "^4.0.5",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "node-cron": "^4.2.1",
    "node-fetch": "2.6.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "start-server-and-test": "^2.1.3",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
